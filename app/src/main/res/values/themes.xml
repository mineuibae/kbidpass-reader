<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KBIdPassReader" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
    </style>


    <!-- Texts styles -->
    <style name="basic_text_style" parent="@android:style/TextAppearance">
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="firstBaselineToTopHeight">0dp</item>
        <item name="autoSizeTextType">none</item>
    </style>

    <style parent="@style/basic_text_style" name="white_bold_title_20_pt_right">
        <item name="android:fontFamily">@font/spoqa_han_sans_bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">right</item>
        <item name="android:lineHeight">32dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style parent="@style/basic_text_style" name="white_medium_14_pt_right">
        <item name="android:fontFamily">@font/spoqa_han_sans_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">right</item>
        <item name="android:lineHeight">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style parent="@style/basic_text_style" name="black_bold_body_18_pt_left">
        <item name="android:fontFamily">@font/spoqa_han_sans_bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:lineHeight">26dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style parent="@style/basic_text_style" name="black_medium_body_12_pt_left">
        <item name="android:fontFamily">@font/spoqa_han_sans_regular</item>
        <item name="android:textSize">12dp</item>
        <item name="android:lineHeight">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style parent="@style/basic_text_style" name="black_bold_title_20_pt_left">
        <item name="android:fontFamily">@font/spoqa_han_sans_bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:lineHeight">32dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>