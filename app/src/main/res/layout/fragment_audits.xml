<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.kbds.kbidpassreader.presentation.audits.AuditsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.audits.AuditsFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/audits_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:auditsItems="@{viewModel.audits}"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/audit_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>